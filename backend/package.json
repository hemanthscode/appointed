{
  "name": "appointed-backend",
  "version": "1.0.0",
  "description": "Student-Teacher Appointment Booking System Backend API",
  "main": "src/server.js",
  "type": "commonjs",
  "author": "Hemanth S",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hemanthscode/appointed.git"
  },
  "keywords": [
    "appointment",
    "booking",
    "student",
    "teacher",
    "education",
    "nodejs",
    "express",
    "mongodb",
    "socket.io",
    "jwt",
    "api"
  ],
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:watch": "nodemon --inspect src/server.js",
    "seed": "node src/utils-seeders/seedDatabase.js",
    "seed:clear": "node src/utils-seeders/seedDatabase.js --clear",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "build": "echo 'No build step required for Node.js backend'",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "db:connect": "node -e \"require('./src/config/database')()\"",
    "db:seed": "npm run seed",
    "db:reset": "npm run seed:clear && npm run seed",
    "logs": "tail -f logs/app.log",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop appointed-backend",
    "pm2:restart": "pm2 restart appointed-backend",
    "pm2:logs": "pm2 logs appointed-backend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4",
    "validator": "^13.11.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": ["src/**/*.js", "!src/server.js", "!src/config/database.js"],
    "coverageDirectory": "coverage",
    "verbose": true
  },
  "eslintConfig": {
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
